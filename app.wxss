/**app.wxss**/
@import "components/animation.wxss";
@import "components/main.wxss";
@import "components/icon.wxss";
page{
  background-color: #F9F9F9;
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.main{
  display: flex;
  flex-direction: column;
  background-color: white;
}
.space{
  height: 10px;
  width: 100%;
  background-color: #F9F9F9;
} 
.line{
  height: 0.5px;
  width: 100%;
  background-color: #EEEEEE;
  flex: none;
}
.mainText{
  font-size: 14px;
  color: #2A2A2A;
}
.copyright{
  width: 100%;
  padding-top: 15px;
  padding-bottom: 15px;
  color: #999999;
  font-size: 10px;
  text-align: center;
}
/*购物车加减组件*/
.stepper { 
  display: flex; 
  width: 80px;  
  height: 23px;  
  border: 1px solid #ccc;  
  border-radius: 2px;  
  margin: 0 auto;
}  
/*加号和减号*/  
.stepper text {  
  width: 20px;  
  line-height: 23px;  
  text-align: center;  
}  
/*数值*/  
.stepper .input {  
  width: 38px;  
  height: 22px;  
  float: left;  
  margin: 0 auto;  
  text-align: center;  
  font-size: 12px;  
  border-left: 1px solid #ccc;  
  border-right: 1px solid #ccc;  
}  
/*普通样式*/  
.stepper .normal{  
  color: black;  
}  
/*禁用样式*/  
.stepper .disabled{  
  color: #ccc;  
}
.public-window{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.public-window .window-bj {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.4);
}
.window-main {
  background: #fff;
  position: absolute;
  min-height: 30vh;
  bottom: -5000px;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
}
.window-main .close{
  display: flex;
  justify-content: flex-end;
  height: 40px;
}
.window-main .close image{
  width: 30px;
  height: 30px;
  padding-right: 10px;
  padding-top: 10px;
  position: relative;
  z-index: 10;
}
.qz-loading{
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  animation: uploader-spinner 1s steps(12) infinite;
  background: transparent url(https://quanzinw.oss-cn-shenzhen.aliyuncs.com/applets/qz-loading.svg) no-repeat;
  background-size: 100%;
}
.no-data{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 13px;
  color: #999999;
  text-align: center;
}
/* copyright */
.copyright{
  flex: 1;
  padding: 20px;
  display: flex;
  flex-direction: row;
  color: white;
  align-items: flex-end;
  justify-content: center;
}
.copyright-image{
  width: 18px;
  height: 18px;
  border-radius: 18px;
}
.copyright-text{
  margin-left: 3px;
  margin-bottom: 3px;
  font-size: 10px;
  color: #999999;
  text-align: center;
  letter-spacing: 2px;
}
/* loading */
.loading-item{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: white;
}
/* bottom-confirm */
.bottom-confirm{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  height: 40px;
  line-height: 40px;
  margin-left: 40px;
  margin-right: 40px;
  margin-bottom: 20px;
  margin-top: 20px;
  text-align: center;
  font-size: 14px;
  color: white;
  background-color:var(--yellow);
  border-radius: 3px;
}
.bottom-confirm::before {
  content: "";
	display: block;
	background: inherit;
	filter: blur(10rpx);
	position: absolute;
	width: 100%;
	height: 100%;
	top: 10rpx;
  left: 10rpx;
	z-index: -1;
	opacity: 0.4;
	transform-origin: 0 0;
	border-radius: inherit;
	transform: scale(1, 1);
}


