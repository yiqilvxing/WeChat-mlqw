/* pages/order/after/detail.wxss */
page{
  background-color: #F9F9F9;
}
.main{
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  font-size: 14px;
  color: #FF8500;
}
.top{
  margin-top: 10px;
  padding: 15px;
  display: flex;
  flex-direction: column;
}
.top-row{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.top-dot{
  width: 10px;
  height: 10px;
  background-color: #FF8500;
  border-radius: 10px;
}
.top-state{
  font-size: 14px;
  color: #FF8500;
  margin-left: 12px;
}
.top-dec{
  font-size: 14px;
  color: #FF8500;
  margin-left: 22px;
}
.item-row{
  padding: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-column{
  display: flex;
  flex-direction: column;
  justify-content: start;
}
.bottom{
  margin: 15px;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 5px;
  box-shadow: 0rpx 10rpx 50rpx 10rpx #5555551A;
}
.bottom-item{
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 15px;
  display: flex;
  flex-direction: column;
}
.bottom-item-title{
  font-size: 18px;
  color: #2A2A2A;
}
.bottom-item-date{
  margin-top: 2px;
  font-size: 12px;
  color: #424242;
}
.bottom-item-no{
  margin-top: 2px;
  margin-bottom: 15px;
  font-size: 12px;
  color: #424242;
}
.item-order{
  margin: 15px;
  padding: 8px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #F5F5F5;
  border-radius: 2px;
}
.item-order-text{
  margin: 2px;
  font-size: 12px;
  color: #999999;
}
.goods{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item-goods{
  width: 50px;
  height: 50px;
  margin-left: 2px;
  margin-right: 3px;
  border-radius: 2px;
}
.item-dec{
  margin-top: 5px;
  margin-left: 15px;
  margin-right: 15px;
  font-size: 14px;
  color: #2A2A2A;
}
.item-dec-detail{
  margin-top: 5px;
  margin-left: 15px;
  margin-right: 15px;
  font-size: 14px;
  color: #999999;
}
.images{
  white-space: nowrap;
  padding: 10px;
}
.item-images{
  display: inline-block;
  width: 60px;
  height: 60px;
  margin-left: 5px;
  margin-right: 5px;
  border-radius: 2px;
}
.item-date{
  color: #999999;
  font-size: 14px;
}
.item-service{
  height: 40px;
  line-height: 40px;
  color: #FFB11C;
  font-size: 14px;
  text-align: center;
}