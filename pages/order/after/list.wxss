/* pages/order/after/list.wxss */
page{
  background-color: #F9F9F9;
}
.main{
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #F9F9F9;
}
.items{
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  background-color: white;
}
.item-row{
  padding: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-column{
  display: flex;
  flex-direction: column;
  justify-content: start;
}
.item-no{
  font-size: 14px;
  color: #2a2a2a;
  font-weight: bold;
}
.item-state{
  font-size: 14px;
  color: var(--yellow);
}
.item-state-off{
  font-size: 14px;
  color: #999999;
}
.item-order{
  margin: 15px;
  padding: 8px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #F5F5F5;
  border-radius: 2px;
}
.item-order-text{
  margin: 2px;
  font-size: 12px;
  color: #999999;
}
.goods{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item-goods{
  width: 50px;
  height: 50px;
  margin-left: 2px;
  margin-right: 3px;
  border-radius: 2px;
}
.item-dec{
  margin-top: 5px;
  margin-left: 15px;
  margin-right: 15px;
  font-size: 14px;
  color: #2A2A2A;
}
.item-dec-detail{
  margin-top: 5px;
  margin-left: 15px;
  margin-right: 15px;
  font-size: 14px;
  color: #999999;
}
.images{
  display: flex;
  flex-direction: row;
  margin: 10px;
}
.item-images{
  width: 60px;
  height: 60px;
  margin-left: 5px;
  margin-right: 5px;
  border-radius: 2px;
}
.item-date{
  color: #999999;
  font-size: 14px;
}
.item-service{
  width: 80px;
  height: 28px;
  line-height: 28px;
  color: #424242;
  font-size: 12px;
  text-align: center;
  border: #999999 solid 1px;
  border-radius: 2px;
}