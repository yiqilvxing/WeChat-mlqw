/* pages/order/confirm/confirm.wxss */
page{
  background-color: #F9F9F9;
}
.itemTitle{
  display: flex;
  flex-direction: row;
  align-items: center;
  min-width: 100px;
}
.title{
  color: black;
  font-size: 14px;
  text-align: left;
}
.content{
  color: #424242;
  font-size: 14px;
}
.describe{
  color: #999999;
  font-size: 12px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.layoutItem{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: center;
  align-items: center;
  padding-left:15px;
  padding-right: 15px;
  background-color: white;
}
.layoutItemContent{
  display: flex;
  flex-direction: row-reverse;
  text-align: center;
  align-items: center;
  overflow: hidden;
}
.layoutItemColumn{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.goodsStoreItem{
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.storeItem{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  justify-items: center;
  padding: 12px;
}
.storeImage{
  width: 20px;
  height: 20px;
}
.storeText{
  flex: 1;
  font-size: 15px;
  color: black;
  margin-left: 5px;
  margin-right: 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  vertical-align: middle;
}
.goodsStoreItem{
  background-color: white;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goodsItem{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.goodsTabImg{
  display: flex;
  margin-left: 12px;
  flex-direction: row;
  justify-content: space-between;
}
.goodsCheck{
  align-self: center;
  size: 10px;
}
.goodsTabItem-cover{
  width: 70px;
  height: 70px;
  background-color: #F4F4F4;
  border-radius: 5px;
  margin-left: 5px;
  margin-top: 12px;
  margin-bottom: 12px;
}
.goodsTabText{
  width: 100%;
  height: 70px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 8px;
  margin-right: 12px;
  margin-top: 12px;
  margin-bottom: 12px;
}
.goodsTabItem-title{
  color: black;
  font-size: 13px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodsTabCart{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.goodsTabItem-price{
  color: #FFBF47;
  font-size: 13px;
}
.goodsTabItem-count{
  color: black;
  font-size: 13px;
  margin-bottom: 5px;
  margin-right: 15px;
  text-align: right;
  float: right;
}
.bottom{
  background-color: white;
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 51px;
}
.bottomItem{
  display: flex;
  flex-direction: row;
  height: 50px;
  width: 100%;
}
.bottomRadio{
  color: #2A2A2A ;
  font-size: 14px;
  margin-left: 12px;
  margin-right: 12px;
  align-self: center;
}
.bottomTotal{
  display: flex;
  flex-direction: column;
  align-self: center;
  margin-left: 10px;
  margin-right: 10px;
  text-align: right;
}
.bottomGoods{
  color: #999999;
  font-size: 12px;
}
.bottomPrice{
  color: #FFB11C;
  font-size: 15px;
}
.bootomSubmit{
  display: flex;
  position: absolute;
  right: 0;
  height: 100%;
  flex-direction: row;
}
.bottomConfirm{
  width: 120px;
  height: 50px;
  color: white;
  font-size: 15px;
  border-radius: 0px;
  background-color: #FFB11C;
  text-align: center;
  vertical-align: middle;
  line-height: 50px;
}
