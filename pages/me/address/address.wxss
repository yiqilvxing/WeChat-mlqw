/* pages/me/address/address.wxss */
page{
  background-color: #F9F9F9;
}
.item{
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 15px;
}
.item-row{
  display: flex;
  flex-direction: row;
  justify-items: center;
  justify-content: space-between;
  align-items: center;
  margin-top: 8px;
}
.item-name{
  color: black;
  font-size: 16px;
}
.item-mobile{
  color: black;
  font-size: 16px;
}
.item-address{
  margin-top: 10px;
  margin-bottom: 10px;
  color: #999999;
  font-size: 14px;
}
.item-radio{
  display: flex;
  flex-direction: row;
  justify-items: center;
  align-items: center;
  color: #424242 ;
  font-size: 12px;
}
.item-radio-img{
  width: 15px;
  height: 15px;
  margin-left: 5px;
  margin-right: 5px;
}
.item-edit{
  color: #424242 ;
  font-size: 12px;
  margin-left: 20px;
}
.bottom{
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0px;
  width: 100%;
}
.bottom-confirm{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  height: 40px;
  line-height: 40px;
  margin-left: 40px;
  margin-right: 40px;
  margin-bottom: 20px;
  margin-top: 20px;
  text-align: center;
  font-size: 14px;
  color: white;
  background-color: #FFB11C;
  border-radius: 5px;
  box-shadow: 0rpx 10rpx 50rpx 10rpx #5555551A;
}