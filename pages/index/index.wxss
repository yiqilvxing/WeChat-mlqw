/**index.wxss**/
.search {
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 2px;
  padding-top: 6px;
  padding-bottom: 6px;
  padding-left: 10px;
  padding-right: 10px;
  background-color: #F4F5F9;
  display: flex;
  flex-direction: row;
  justify-content: start;
  text-align: center;
  align-items: center;
}
.searchText{
  font-size: 14px;
  color: #999999;
  margin-left: 3px;
  margin-right: 3px;
}
.searchImg{
  width: 20px;
  height: 20px;
}
.banner{
  height: 180px;
  margin: 10px;
  background-color: #F4F5F9;
}
.bannerImg{
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.tag{
  width: 100%;
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.tagItem{
  display: flex;
  flex-direction: row;
  flex: 1;
  justify-content: center;
  text-align: center;
  align-items: center;
}
.tagImg{
  width: 15px;
  height: 15px;
}
.tagText{
  font-size: 12px;
  color: #FFBF47;
  margin-left: 5px;
}
.tab{
  margin-top: 15px;
  margin-bottom: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.tabMenu{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}
.tabImg{
  width: 45px;
  height: 45px;
}
.tabText{
  margin-top: 5px;
  font-size: 12px;
  color: #2A2A2A;
}
.goods{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
}
.largeText{
  font-size: 20px;
  color: black;
  letter-spacing: 1px;
}
.smallText{
  font-size: 12px;
  color: #424242;
  letter-spacing: 1px;
}
.goodsList{
  padding-top: 10px;
  padding-bottom: 10px;
  min-height: 50px;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  overflow: hidden;
}
.goodsItem{
  display: inline-block;
  flex-direction: column;
  text-align: left;
  width: 100px;
  margin-left: 5px;
  margin-right: 5px;
  white-space: normal;
}
.goodsImage{
  display: flex;
  flex-direction: column;
}
.goodsSpecailItem-cover{
  width: 100px;
  height: 100px;
  background-color: #F4F4F4;
  border-radius: 5px;
}
.goodsSpecailItem-tag{
  width: 30px;
  height: 15px;
  margin-top: -15px;
  border-radius: 0px 0px 0px 5px;
}
.goodsSpecailItem-title{
  margin-top: 4px;
  height: 40px;
  display: block;
  color: #2A2A2A;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goodsSpecailItem-price{
  color: #FFBF47;
  font-size: 15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 2px;
}
.goodsTab{
  padding: 10px;
  min-height: 50px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goodsTabItem{
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin: 5px;
  width: 180px;
  height: auto;
  margin-bottom: 10px;
}
.goodsTabItem-cover{
  width: 100%;
  height: 180px;
  background-color: #F4F4F4;
  border-radius: 5px;
}
.goodsTabItem-title{
  margin-top: 5px;
  display: block;
  color: #2A2A2A;
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goodsMessage{
  display: flex;
  flex-direction: row;
  margin-top: 5px;
  justify-content: space-between;
}
.goodsPrice{
  display: flex;
  flex-direction: row;
}
.goodsTabItem-rmb{
  color: #2A2A2A;
  font-size: 9px;
}
.goodsTabItem-price{
  color: black;
  font-size: 15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goodsTabItem-buy{
  background-color: #FFB11C;
  border-radius: 2px;
  display: flex;
  justify-content: center;
  padding: 2px;
  width: 40px;
  font-size: 12px;
  color: white;
}
.goodsTabItem-buy-off{
  background-color: #CCCCCC;
  border-radius: 2px;
  display: flex;
  justify-content: center;
  padding: 2px;
  width: 40px;
  font-size: 12px;
  color: white;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}


