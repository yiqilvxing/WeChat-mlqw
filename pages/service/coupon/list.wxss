/* pages/service/coupon/list.wxss */
page{
  background-color: #F9F9F9;
}
.main{
  background-color: #F9F9F9;
  height: 100%;
}
.swiper-tab{
  top: 0;
  width: 100%;
  position: fixed;
  z-index: 1024;
  text-align: center;
  background-color: white;
  white-space: nowrap;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
::-webkit-scrollbar {
	display: none;
}
.swiper-tab-text{  
  height: 90rpx;
	display: inline-block;
	line-height: 90rpx;
	margin: 0 10rpx;
	padding: 0 20rpx;
  color: #666666;
  font-size: 14px;
  font-weight: normal;
}
.swiper-tab-text-on{
  height: 90rpx;
	display: inline-block;
	line-height: 90rpx;
	margin: 0 10rpx;
	padding: 0 20rpx;
  color: #FF8500;
  font-size: 14px;
  border-bottom: 4rpx solid;
}
.swiper-box{
  flex: 1;
  padding-top: 90rpx;
  width: 100%;
  display: block; 
}
.couponItems{
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 15px;
  display: flex;
  flex-direction: column;
}
.item{
  height: 90px;
  background-color: #FFC14B;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-off{
  height: 90px;
  background-color: #CCCCCC;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: baseline;
}
.item-left{
  height: 100%;
  margin-left: 10px;
  background-color: white;
  width: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #FFC14B;
}
.item-left-off{
  height: 100%;
  margin-left: 10px;
  background-color: white;
  width: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999999;
}
.item-left-rmb{
  font-size: 14px;
}
.item-left-money{
  margin-left: 2px;
  font-size: 22px;
}
.item-left-type{
  font-size: 14px;
  color: #999999;
}
.item-line{
  width: 1px;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  justify-items: center;
  background-color: white;
}
.item-line-line{
  width: 1px;
  height: 60px;
  background-color: #E0E0E0;
}
.item-line-bg{
  width: 10px;
  height: 100%;
}
.item-center{
  padding-left: 10px;
  padding-right: 10px;
  flex: 1;
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-center-name{
  margin-top: 10px;
  font-size: 14px;
  color: #424242;
}
.item-center-date{
  font-size: 12px;
  color: #999999;
}
.item-center-store{
  font-size: 12px;
  color: #999999;
  margin-bottom: 10px;
}
.item-right{
  height: 100%;
  width: 36px;
  color: white;
  font-size: 14px;
  margin-right: 4px;
  font-weight: lighter;
  writing-mode: vertical-rl;
  letter-spacing: 5px;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
  align-items: center;
}

