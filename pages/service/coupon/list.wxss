/* pages/service/coupon/list.wxss */
page{
  background-color: #F6F6F6;
}
.main{
  background-color: #F6F6F6;
  height: 100%;
}
.swiper-tab{
  height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  background-color: white;
  padding-top: 15px;
  padding-left: 15px;
  padding-right: 15px;
}
.swiper-tab-text{  
  margin-left: 25px;
  margin-right: 25px;
  height: 30px;
  color: #666666;
  font-size: 14px;
  font-weight: normal;
  display: inline-block;
}
.swiper-tab-text-on{
  margin-left: 25px;
  margin-right: 25px;
  height: 30px;
  color: #ffb11c;
  font-size: 15px;
  font-weight: bold;
  border-bottom: 2px solid #ffb11c;
  border-radius: 1px;
}
.swiper-box{
  width: 100%;
  display: block; 
}
.couponItems{
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 15px;
  display: flex;
  flex-direction: column;
}
.item{
  height: 90px;
  background-color: #FFC14B;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-off{
  height: 90px;
  background-color: #CCCCCC;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: baseline;
}
.item-left{
  height: 100%;
  margin-left: 10px;
  background-color: white;
  width: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #FFC14B;
}
.item-left-off{
  height: 100%;
  margin-left: 10px;
  background-color: white;
  width: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999999;
}
.item-left-rmb{
  font-size: 14px;
}
.item-left-money{
  margin-left: 2px;
  font-size: 22px;
}
.item-left-type{
  font-size: 14px;
  color: #999999;
}
.item-line{
  width: 1px;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  justify-items: center;
  background-color: white;
}
.item-line-line{
  width: 1px;
  height: 60px;
  background-color: #E0E0E0;
}
.item-line-bg{
  width: 10px;
  height: 100%;
}
.item-center{
  padding-left: 10px;
  padding-right: 10px;
  flex: 1;
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-center-name{
  margin-top: 10px;
  font-size: 14px;
  color: #424242;
}
.item-center-date{
  font-size: 12px;
  color: #999999;
}
.item-center-store{
  font-size: 12px;
  color: #999999;
  margin-bottom: 10px;
}
.item-right{
  height: 100%;
  width: 36px;
  color: white;
  font-size: 14px;
  margin-right: 4px;
  font-weight: lighter;
  writing-mode: vertical-rl;
  letter-spacing: 5px;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
  align-items: center;
}

