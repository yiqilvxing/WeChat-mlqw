/* pages/service/coupon/detail.wxss */
.main{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 100%;
}
.item{
  margin: 15px;
  display: flex;
  flex-direction: column;
  background-color: #EEEEEE;
  border-radius: 10px;
  box-shadow: 0rpx 10rpx 50rpx 10rpx #5555551A;
}
.item-store{
  height: 40px;
  padding-left: 15px;
  padding-right: 15px;
  font-size: 14px;
  color: black;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-top{
  padding: 20px;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.item-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: baseline;
}
.item-row-rmb{
  font-size: 16px;
  color: #FFC14B;
}
.item-row-money{
  margin-left: 2px;
  font-size: 36px;
  color: #FFC14B;
}
.item-name{
  margin-top: 10px;
  font-size: 14px;
  color: #999999;
}
.item-use{
  font-size: 16px;
  color: white;
  margin-top: 25px;
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #FFC14B;
  border-radius: 40px;
}
.item-line{
  width: 100%;
  height: 15px;
}
.item-bottom{
  padding: 20px;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item-dec{
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.item-dec-row{
  display: flex;
  flex-direction: row;
  margin-bottom: 20px;
}
.item-dec-coulmn{
  display: flex;
  flex-direction: column;
  justify-content: start;
  justify-items: start;
  margin-left: 10px;
}
.item-dec-image{
  width: 12px;
  height: 12px;
  margin-top: 3px;
}
.item-dec-title{
  font-size: 14px;
  color: black;
}
.item-dec-content{
  margin-top: 2px;
  font-size: 12px;
  color: #999999;
}