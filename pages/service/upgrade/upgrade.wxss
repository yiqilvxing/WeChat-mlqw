/* pages/service/upgrade/upgrade.wxss */
page{
  background-color: #F9F9F9;
}
.main{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #F9F9F9;
}
.-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
display: none;
}
.swiper-tab{
  padding-left: 10px;
  padding-right: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
  background-color: white;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.swiper-tab-text{
  padding: 15px;
  color: #666666;
  text-align: center;
  font-size: 14px;
  font-weight: normal;
  border-bottom: 2px solid transparent;
  display: inline-block;
}
.swiper-tab-text-on{
  padding: 15px;
  color: #ffb11c;
  text-align: center;
  font-size: 15px;
  font-weight: bold;
  border-bottom: 2px solid #ffb11c;
  border-radius: 1px;
  display: inline-block;
}
.swiper-box{
  flex: 1;
  display: block; 
}


