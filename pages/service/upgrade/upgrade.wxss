/* pages/service/upgrade/upgrade.wxss */
page{
  background-color: white;
}
.main{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 100%;
  margin-bottom: 80px;
}
.header{
  display: flex;
  flex-direction: column-reverse;
  padding: 15px;
  height: 180px;
  background-size: 100% 100%; 
}
.top-item{
  display: flex;
  flex-direction: column;
  margin-top: -90px;
  margin-left: 15px;
  margin-right: 15px;
}
.top-image{
  border-radius: 5px;
  width: 100%;
  height: 170px;
  box-shadow: 0rpx 10rpx 50rpx 10rpx #5555551A;
}
.top-user{
  display: flex;
  flex-direction: row;
  margin-bottom: 5px;
}
.imgHeader{
  width: 70px;
  height: 70px;
  border-radius: 35px;
}
.user{
  height: 70px;
  color: white;
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  margin-right: 10px;
}
.userLogin{
  height: 70px;
  color: white;
  display: flex;
  justify-items: center;
  justify-content: center;
  flex-direction: column;
  margin-left: 10px;
  margin-right: 10px;
}
.userName{
  font-size: 18px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 200px;
  margin-right: 50px;
}
.userCode{
  font-size: 12px;
}
.userItem{
  display: flex;
  flex-direction: row;
  margin-top: 5px;
}
.userTag{
  height: 20px;
  min-width: 30px;
  max-width: 100px;
  font-size: 11px;
  border-radius: 18px;
  background-color: #C2583B;
  margin-right: 5px;
  text-align: center;
  vertical-align: middle;
  line-height:20px;
  padding-left: 8px;
  padding-right: 8px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.vip-level{
  color: black;
  font-size: 14px;
  font-weight: bold;
  margin: 15px;
}
.vip-level-dec{
  color: #999999;
  font-size: 12px;
  margin-left: 15px;
  margin-right: 15px;
}
.level-item{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 15px;
  margin-right: 15px;
}
.item-bg{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 160px;
  height: 65px;
  border-radius: 5px;
  border: 1px solid #CCCCCC;
  background-color: white;
  margin-bottom: 10px;
}
.item-bg-on{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 160px;
  height: 65px;
  border-radius: 5px;
  border: 1px solid #FFB11C;
  background-color: #FDFBF1;
  margin-bottom: 10px;
}
.item-column{
  display: flex;
  flex-direction: column;
}
.item-row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
  flex-wrap: nowrap;
}
.item-name{
  margin-top: 4px;
  margin-left: 8px;
  color: #2a2a2a;
  font-size: 15px;
  font-weight: bold;
}
.item-rmb{
  color: #FFB11C;
  font-size: 12px;
}
.item-price{
  margin-top: 4px;
  margin-right: 8px;
  color: #FFB11C;
  font-size: 18px;
}
.item-row-d{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.item-discount{
  margin-bottom: 4px;
  margin-left: 8px;
  margin-right: 8px;
  color: #999999;
  font-size: 12px;
}
.item-dot{
  width: 28px;
  height: 30px;
}
.bottom{
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0px;
  width: 100%;
}


