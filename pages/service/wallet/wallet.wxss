/* pages/service/wallet/wallet.wxss */
page{
  background-color: white;
}
.main{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 100%;
}
.header{
  display: flex;
  flex-direction: column;
  padding: 15px;
  height: 180px;
  background-size: 100% 100%; 
}
.swiper-tab{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-content: center;
}
.swiper-tab-text{
  height: 30px;
  margin-right: 20px;
  font-size: 15px;
  color: #cccccc;
  display: inline-block;
}
.swiper-tab-text-on{
  height: 30px;
  margin-right: 20px;
  font-size: 15px;
  color: #ffffff;
  display: inline-block;
  border-bottom: 2px solid white;
  border-radius: 1px;
}
.item-total{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
  text-align: center;
  margin-top: 80px;
  padding: 15px;
  color: black;
  background-color: white;
  border-radius: 5px;
  border: 1px solid white;
  box-shadow: 0rpx 10rpx 50rpx 10rpx #5555551A;
}
.item-total-title{
  font-size: 14px;
  color: black;
  font-weight: bold;
  align-content: center;
}
.item-total-money{
  font-size: 36px;
  color: black;
  font-weight: bold;
  margin: 15px;
  align-content: center;
}
.item-total-option{
  align-content: center;
  width: 80px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #999999;
  background-color: white;
  border-radius: 5px;
  border: 1px solid #999999;
}
.item-row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 80px;
  margin-bottom: 5px;
}
.item-row-left{
  font-size: 15px;
  color: black;
}
.item-row-right{
  font-size: 12px;
  color: #999999;
}
.item-detail{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 100%;
}
.item-detail-bg{
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 10px;
  margin-bottom: 10px;
  padding: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  border-radius: 5px;
  border: 1px solid white;
  box-shadow: 0rpx 10rpx 50rpx 10rpx #5555551A;
}
.item-detail-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.item-detail-date{
  font-size: 12px;
  color: #999999;
}
.item-detail-content{
  margin-top: 5px;
  font-size: 14px;
  color: #2A2A2A;
}
.item-detail-price{
  font-size: 16px;
  color: #FFB11C;
}