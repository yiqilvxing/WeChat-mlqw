/* pages/service/wallet/list.wxss */
page{
  background-color: #F9F9F9;
}
.main{
  display: flex;
  flex-direction: column;
  background-color: #F6F6F6;
}
.swiper-tab{
  padding-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: white;
}
.swiper-tab-text{
  min-width: 50px;
  height: 30px;
  color: #666666;
  font-size: 14px;
  font-weight: normal;
  display: inline-block;
  margin-left: 50px;
  margin-right: 50px;
}
.swiper-tab-text-on{
  min-width: 50px;
  height: 30px;
  color: #ffb11c;
  font-size: 15px;
  font-weight: bold;
  border-bottom: 2px solid #ffb11c;
  border-radius: 1px;
  margin-left: 50px;
  margin-right: 50px;
}
.item-detail{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 100%;
  margin: 10px;
}
.item-detail-bg{
  margin: 5px;
  padding: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  border-radius: 5px;
  border: 1px solid white;
  box-shadow: 0rpx 10rpx 50rpx 10rpx #5555551A;
}
.item-detail-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.item-detail-date{
  font-size: 12px;
  color: #999999;
}
.item-detail-content{
  margin-top: 5px;
  font-size: 14px;
  color: #2A2A2A;
}
.item-detail-price{
  font-size: 16px;
  color: #FFB11C;
}