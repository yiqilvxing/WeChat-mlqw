/* pages/service/wallet/list.wxss */
page{
  background-color: white;
}
.main{
  background-color: white;
  height: 100%;
}
.swiper-tab{
  top: 0;
  width: 100%;
  position: fixed;
  z-index: 1024;
  text-align: center;
  background-color: white;
  white-space: nowrap;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
::-webkit-scrollbar {
	display: none;
}
.swiper-tab-text{  
  width: 150rpx;
  height: 90rpx;
	display: inline-block;
	line-height: 90rpx;
	margin: 0 10rpx;
	padding: 0 20rpx;
  color: #666666;
  font-size: 14px;
  font-weight: normal;
}
.swiper-tab-text-on{
  width: 150rpx;
  height: 90rpx;
	display: inline-block;
	line-height: 90rpx;
	margin: 0 10rpx;
	padding: 0 20rpx;
  color: #FF8500;
  font-size: 14px;
  border-bottom: 4rpx solid;
}
.swiper-box{
  flex: 1;
  margin-top: 90rpx;
  width: 100%;
  display: block; 
}
.item-detail{
  margin: 12px;
  padding: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  border-radius: 5px;
  border: 1px solid white;
  box-shadow: 0rpx 10rpx 50rpx 10rpx #5555551A;
}
.item-detail-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.item-detail-date{
  font-size: 12px;
  color: #999999;
}
.item-detail-content{
  margin-top: 5px;
  font-size: 14px;
  color: #2A2A2A;
}
.item-detail-price{
  font-size: 16px;
  color: #FFB11C;
}