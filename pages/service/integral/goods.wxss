/* pages/service/integral/goods.wxss */
.main{
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
}
.goodsTab{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 50px;
}
.goodsTabItem{
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 15px;
  width: 180px;
  height: auto;
  border-radius: 0;
  border: 0.5px solid #EEEEEE;
  border-left-width: 0;
  border-top-width: 0;
}
.goodsTabItem-cover{
  width: 100%;
  height: 180px;
  background-color: #F4F4F4;
  border-radius: 5px;
}
.goodsTabItem-title{
  margin-top: 5px;
  display: block;
  color: #2A2A2A;
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goodsTabItem-row{
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goodsTabItem-money{
  display: block;
  color: #FFB300;
  font-size: 14px;
}
.goodsTabItem-point{
  display: block;
  color: #999999;
  font-size: 12px;
}
.goodTabItem-buy{
  margin-top: 12px;
  width: 100px;
  height: 30px;
  line-height: 30px;
  color: #FFB300;
  font-size: 14px;
  text-align: center;
  align-self: center;
  justify-content: center;
  border-radius: 30px;
  border: 1px solid #FFB300;
}
.goodTabItem-buy-off{
  margin-top: 12px;
  width: 100px;
  height: 30px;
  line-height: 30px;
  color: #CCCCCC;
  font-size: 14px;
  text-align: center;
  align-self: center;
  justify-content: center;
  border-radius: 30px;
  border: 1px solid #CCCCCC;
}