/* pages/service/sales/record.wxss */
page{
  background-color: #F9F9F9;
}
.main{
  background-color: #F6F6F6;
  height: 100%;
}
.goodsStoreItem{
  background-color: white;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.userItem{
  display: flex;
  flex-direction: row;
  padding: 12px;
  align-items: center;
}
.userImage{
  width: 40px;
  height: 40px;
  border-radius: 40px;
}
.user-column{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  margin-right: 10px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  vertical-align: middle;
}
.userText{
  font-size: 15px;
  color: black;
}
.userText-level{
  font-size: 12px;
  color: #999999;
}
.left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.right{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item-row-no{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15px;
  font-size: 14px;
  color: #282828;
}
.goodsCartItem{
  background-color: white;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goodsItem{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.goodsTabImg{
  display: flex;
  margin-left: 12px;
  flex-direction: row;
  justify-content: space-between;
}
.goodsCheck{
  align-self: center;
  size: 10px;
}
.goodsTabItem-cover{
  width: 70px;
  height: 70px;
  background-color: #F4F4F4;
  border-radius: 5px;
  margin-left: 5px;
  margin-top: 12px;
  margin-bottom: 12px;
}
.goodsTab-row{
  display: flex;
  flex-direction: row;
}
.goodsTabText{
  width: 100%;
  height: 70px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 8px;
  margin-right: 12px;
  margin-top: 12px;
  margin-bottom: 12px;
}
.goodsTabItem-title{
  color: black;
  font-size: 13px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodsTabItem-count{
  color: black;
  font-size: 12px;
}
.goodsTabCart{
  color: #999999;
  font-size: 12px;
}
.bottom{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: fixed;
  bottom: 0px;
}
.bottom-option{
  margin: 25px;
  border-radius: 5px;
  background-color: #FFBF47;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color: white;
  text-align: center;
  font-weight: lighter;
  box-shadow: 0rpx 10rpx 50rpx 10rpx #5555551A;
}

